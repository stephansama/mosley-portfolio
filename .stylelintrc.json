{
	"extends": [
		"stylelint-config-standard",
		"stylelint-config-html",
		"stylelint-config-tailwindcss"
	],
	"rules": {
		"selector-class-pattern": false,
		"at-rule-no-deprecated": [
			{ "ignoreAtRules": ["define-mixins", "/^view/", "apply"] }
		],
		"at-rule-no-unknown": [
			{ "ignoreAtRules": ["define-mixins", "/^view/", "apply"] }
		]
	}
}
